<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
    "http://struts.apache.org/dtds/struts-2.5.dtd">

<struts>
	<constant name="struts.devMode" value="true" />
	<package name="show_result" extends="struts-default">
		<!-- 设置默认action，用户输入非法url自动执行LoginPage这个action -->
		<default-action-ref name="LoginPage"></default-action-ref>
		
		<!-- 全局result -->
		<global-results>
			<result name="error">
				/Error.jsp
			</result>	
		</global-results>
		
		<!-- 以下是各种action -->
		<action name="LoginPage"
			class="com.defaults.ToLogin">
			<result>
				/Login.html
			</result>
		</action>
		
		<action name="LoginAction"
			class="com.account.LoginIn"
			method="matchAccount">
			<result>
				/HomePage.jsp
			</result>
			<result name="noMatch">
				/Nomatch.jsp
			</result>
		</action>
		
		<action name="SignAction"
			class="com.account.SignUp"
			method="createAccount">
			<result>
				/HomePage.jsp
			</result>
			<result name="existed">
				/Nomatch.jsp
			</result>
		</action>
		
   	</package>
</struts>